// --- (updateCountDisplay, updateInningDisplay, updateBaseDisplay, updateTeamNameInputs ìƒëµ - ì´ì „ê³¼ ë™ì¼) ---
function updateCountDisplay(type) { const count = localStorage.getItem(type) || "0"; const statusElement = document.getElementById(type + "_status"); if (!statusElement) return; let prefix = ""; if (type === 'ball') prefix = "ë³¼: "; else if (type === 'strike') prefix = "ìŠ¤íŠ¸ë¼ì´í¬: "; else if (type === 'out') prefix = "ì•„ì›ƒ: "; if (type === 'out') { let html = prefix; for (let i = 0; i < 3; i++) { html += `<span style="background-color:${i < parseInt(count) ? 'red' : '#ddd'};"></span>`; } statusElement.innerHTML = html; } else { statusElement.textContent = prefix + count; } }
